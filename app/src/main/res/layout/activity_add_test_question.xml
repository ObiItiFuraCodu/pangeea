<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".test.Add_test_question">

    <TextView
        android:id="@+id/q_type"
        android:layout_width="380dp"
        android:layout_height="96dp"
        android:fontFamily="@font/poppins_extrabold"
        android:text="ADD TEST \nQUESTION"

        android:textColor="@color/black"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/q_prompt"
        android:layout_width="374dp"
        android:layout_height="98dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="12dp"
        android:elevation="2sp"
        android:ems="10"
        android:fontFamily="@font/poppins_extrabold"
        android:inputType="textPersonName"
        android:text="Prompt"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/type" />

    <EditText
        android:id="@+id/a_prompt"
        android:layout_width="374dp"
        android:layout_height="84dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:elevation="2sp"
        android:ems="10"
        android:fontFamily="@font/poppins_extrabold"
        android:inputType="textPersonName"
        android:text="A:"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_q_file" />

    <EditText
        android:id="@+id/b_prompt"
        android:layout_width="374dp"
        android:layout_height="84dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:elevation="2sp"
        android:ems="10"
        android:fontFamily="@font/poppins_extrabold"
        android:inputType="textPersonName"
        android:text="B:"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a_prompt" />

    <EditText
        android:id="@+id/c_prompt"
        android:layout_width="374dp"
        android:layout_height="84dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:elevation="2sp"
        android:ems="10"
        android:fontFamily="@font/poppins_extrabold"
        android:inputType="textPersonName"
        android:text="C:"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_prompt" />

    <Button
        android:id="@+id/a_valid"
        android:layout_width="96dp"
        android:layout_height="44dp"
        android:background="@drawable/rounded"
        android:elevation="2sp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/a_prompt"
        app:layout_constraintEnd_toEndOf="@+id/a_prompt"
        app:layout_constraintHorizontal_bias="0.967"
        app:layout_constraintStart_toStartOf="@+id/a_prompt"
        app:layout_constraintTop_toTopOf="@+id/a_prompt" />

    <Button
        android:id="@+id/b_valid"
        android:layout_width="96dp"
        android:layout_height="44dp"
        android:background="@drawable/rounded"
        android:text=" "
        app:layout_constraintBottom_toBottomOf="@+id/b_prompt"
        app:layout_constraintEnd_toEndOf="@+id/b_prompt"
        app:layout_constraintHorizontal_bias="0.967"
        app:layout_constraintStart_toStartOf="@+id/b_prompt"
        app:layout_constraintTop_toTopOf="@+id/b_prompt"
        app:layout_constraintVertical_bias="0.525" />

    <Button
        android:id="@+id/c_valid"
        android:layout_width="96dp"
        android:layout_height="44dp"
        android:background="@drawable/rounded"
        android:text=" "
        app:layout_constraintBottom_toBottomOf="@+id/c_prompt"
        app:layout_constraintEnd_toEndOf="@+id/c_prompt"
        app:layout_constraintHorizontal_bias="0.967"
        app:layout_constraintStart_toStartOf="@+id/c_prompt"
        app:layout_constraintTop_toTopOf="@+id/c_prompt" />

    <Button
        android:id="@+id/add_q"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="ADD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/c_prompt"
        app:layout_constraintVertical_bias="0.984" />

    <Button
        android:id="@+id/add_q_file"
        android:layout_width="92dp"
        android:layout_height="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded"
        android:text="ADD"
        android:textSize="4sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_files" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/poppins_extrabold"

        android:text="Type:"
        android:textColor="@color/black"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/type"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/type" />

    <Spinner
        android:id="@+id/question_files"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/q_prompt" />

    <Spinner
        android:id="@+id/type"
        android:layout_width="252dp"
        android:layout_height="31dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/q_type" />

</androidx.constraintlayout.widget.ConstraintLayout>